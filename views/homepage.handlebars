<!-- Loop over each object in the plants array -->
{{#each plants as |plant| }}
<div class="row mb-4 plant">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/plant/{{plant.id}}">{{plant.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ğŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount plant.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{plant.user.name}} on {{format_date plant.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{plant.description}}
    </p>
  </div>
</div>
{{/each}}
