<div class="row flex flex-col flex-wrap items-center">
  <div class="flex flex-col flex-wrap items-center">
    <h2>Login</h2>

    <form class="form login-form p-4 w-96">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button id="logoutBtn" class="p-2" type='submite'><img class="h-4 m-auto" src="./assets/images/icons8-login-48.png"
            alt="A dark green login icon">Login</button>
      </div>
    </form>
  </div>
  <div class="flex flex-col flex-wrap items-center">
    <h2>Signup</h2>

    <form class="form signup-form p-4 w-96">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
       <button id="logoutBtn" class="p-2" type='submite'><img class="h-4 m-auto" src="./assets/images/icons8-registration-48.png"
            alt="A dark green login icon">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
